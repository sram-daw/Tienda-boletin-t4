@model Tienda.Models.Producto

@{
	ViewData["Title"] = "Detalles Producto";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Detalles</title>
</head>
<body>
	@if (TempData["MessageOk"] != null)
	{
		<div id="okMessage" class="alert alert alert-success mt-4">
			@TempData["MessageOk"]
		</div>
	}
	<div>
		<h4>Producto</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.codigo)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.codigo)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.nombre)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.nombre)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.precio)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.precio)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.codigo_fabricante)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.codigo_fabricante)
			</dd>
		</dl>
	</div>
	<div>
		@Html.ActionLink("Borrar", "Borrar", new {  id = Model.codigo })
		@Html.ActionLink("Modificar", "ModificarByIdForm", new {  id = Model.codigo })

		<a asp-action="Index">Back to List</a>

	</div>
</body>
</html>
